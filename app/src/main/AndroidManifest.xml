<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lenovo.opps">

    <application
        android:allowBackup="true"
        android:icon="@drawable/oops"
        android:label="Ooops"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LauncherActivity"
            android:label="Oops">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OptionMenuActivity"
            android:label="@string/title_activity_option_menu"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".StartGameActivity"
            android:label="@string/title_activity_start_game"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".ScoreActivity"
            android:label="@string/title_activity_score"
            android:screenOrientation="portrait"></activity>

    </application>

</manifest>